<h1> Sign our Petition to make Guinness vegetarian / vegan friendly </h1>
<div class="not-cool"></div>
<div>
    <p> {{err}}</p>

    <form style="margin:50px" method="POST">
        {{! <label for="first">First Name</label>
        <input type="text" name="first"></input>
        <label for="last">Last Name</label>
        <input type="text" name="last"></input> }}
        {{! <input name="password" value="trustno1" /> }}

        <canvas
            style="margin:50px 0"
            id="canvas"
            width="300"
            height="100"
        ></canvas>
        {{! <label style="margin-left:125px" for="signature">Sign Here</label> }}
        <input id="input-sig" name="signature" type="hidden" />
        <button class="submit" type="submit">Sign Petition</button>
    </form>
    <a href="/home"><button class="submit" type="submit">Home</button></a>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="./canvas.js"></script>
    <script src="./request.js"></script>
</div>